---
import logo from "../images/logo.png";
const year = new Date().getFullYear();
---

<footer class="footer">
  <div class="first-row">
    <div class="img-container">
      <img src={logo} alt="Logo" />
    </div>
    <div class="links">
      <h4>Linkuri utile</h4>
      <ul class="links-list">
        <li class="link">
          <a href="/">Acasa</a>
        </li>
        <li class="link">
          <a href="/actions">Despre</a>
        </li>
        <li class="link">
          <a href="/blog">Blog</a>
        </li>
      </ul>
    </div>
  </div>
  <div class="second-row">
    <!-- <h5>Site made by Tudorica Eric</h5> -->
    <h5>@Floare de Colt {year}</h5>
  </div>
</footer>

<style>
  .footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1rem 2rem;
    background-color: #000;
    color: #fff;
  }

  .first-row {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
  }

  .img-container img {
    width: 10rem;
  }

  .links {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .links h4 {
    font-size: 1.6rem;
  }

  .links-list {
    width: 15rem;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
  }

  .link a {
    display: block;
    color: #fff;
    font-size: 1.4rem;
    cursor: pointer;
  }

  .second-row {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .second-row h5 {
    font-size: 1.3rem;
  }
</style>
