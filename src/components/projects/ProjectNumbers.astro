---
import ChartIcon from "../../icons/ChartIcon";
import DaysIcon from "../../icons/DaysIcon";
import PersonIcon from "../../icons/PersonIcon";
---

<div class="container">
  <h2 class="section__title">Actiunile noastre</h2>
  <div class="numbers-row">
    <div class="item">
      <div class="svg">
        <ChartIcon />
      </div>
      <h2 class="item-title">Numar actiuni de educatie ecologica intreprinse</h2>
      <h3 class="number">146</h3>
    </div>
    <div class="item">
      <div class="svg">
        <DaysIcon />
      </div>
      <h2 class="item-title">Numar zile-om dedicate educatiei ecologice</h2>
      <h3 class="number">168.018</h3>
    </div>
    <div class="item">
      <div class="svg">
        <PersonIcon />
      </div>
      <h2 class="item-title">Numar tineri participanti</h2>
      <h3 class="number">10.195</h3>
    </div>
  </div>
</div>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Anton&display=swap");

  .container {
    margin-bottom: 4rem;
  }

  .container h2 {
    text-align: center;
  }

  .numbers-row {
    margin: 3rem 0;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 2rem;
  }

  .item {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;
  }

  .svg {
    width: 5rem;
  }

  .item-title {
    color: var(--text-color);
    width: 20rem;
    font-size: 2rem;
    text-align: center;
  }

  .number {
    font-size: 2.8rem;
    font-family: "Anton", sans-serif;
    font-style: italic;
  }

  @media (max-width: 700px) {
    .numbers-row {
      grid-template-columns: 1fr;
    }
  }
</style>
