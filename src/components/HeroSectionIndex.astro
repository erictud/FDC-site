---
import img1 from "/main-page/img1.jpg";
import img2 from "/main-page/img2.jpg";
import img3 from "/main-page/img3.jpg";
---

<div class="hero-section">
  <h1 class="title"><span class="color">Fundatia</span> EcologicÄƒ Floare de Colt</h1>
  <!-- <h3 class="moto">Lorem ipsum dolor sit amet consectetur adipisicing elit. Cumque, aut.</h3> -->
  <div class="image-gallery">
    <img src={img1} alt="imagine" class="image" />
    <img src={img2} alt="imagine" class="image" />
    <img src={img3} alt="imagine" class="image" />
  </div>
  <button class="btn">Afla mai multe</button>
</div>

<style>
  .hero-section {
    margin-top: 8rem;
    width: 100;
    display: flex;
    flex-direction: column;
    gap: 3rem;
    align-items: center;
  }

  .title,
  .color {
    text-align: center;
    font-size: 5rem;
    text-transform: uppercase;
    letter-spacing: 0.15rem;
    word-spacing: 0.5rem;
    animation: FadeRight 2s ease;
  }

  .color {
    color: var(--color-primary) !important;
  }

  .moto {
    font-size: 2rem;
    color: var(--text-color);
    text-align: center;
    animation: FadeRight 2s ease;
  }

  .btn {
    padding: 1rem 4rem;
    border: none;
    background-color: var(--color-primary);
    color: white;
    font-size: 1.4rem;
    cursor: pointer;
  }

  .image-gallery {
    width: 95vw;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    gap: 1rem;
    justify-content: center;
    align-content: center;
  }

  .image {
    border-radius: 1rem;
    width: 20%;
    transition: all 0.3s ease;
    animation: FadeLeft 2s ease;
  }

  .image:hover,
  .image:active {
    transform: scale(1.05);
    border-radius: 1rem;
  }

  @media (max-width: 1200px) {
    .title,
    .color {
      font-size: 3.5rem;
    }

    .moto {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 900px) {
    .image:nth-child(3) {
      display: none;
    }

    .image {
      width: 30%;
    }
  }

  @media (max-width: 700px) {
    .title,
    .color {
      font-size: 2.5rem;
    }

    .moto {
      font-size: 1.3rem;
    }
  }

